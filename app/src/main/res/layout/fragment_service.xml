<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/fragment_service"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/frame_service_ListView"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/search_service"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_column="0"
            android:layout_margin="5sp"
            android:background="@drawable/textbox"
            android:drawableLeft="@drawable/search"
            android:ems="5"
            android:hint="Search..."
            android:inputType="textAutoComplete"
            android:paddingLeft="15dp" />

        <ListView
            android:id="@+id/listview_service"
            style="@android:style/Widget.DeviceDefault.Light.ExpandableListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_service"
            android:layout_marginBottom="0dp"
            android:clickable="true"
            android:columnWidth="150dp"
            android:dividerHeight="4sp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:stretchMode="spacingWidthUniform"
            android:verticalSpacing="20dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/NoService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/progressLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:layout_marginTop="65sp"
            android:visibility="gone">

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:indeterminateTint="@color/brownLoading"
                android:indeterminateTintMode="multiply"
                android:theme="@style/greenLoading" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
