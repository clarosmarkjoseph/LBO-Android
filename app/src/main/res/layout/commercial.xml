<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="0dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:maxHeight="250dp"
    android:layout_height="wrap_content">

    <!--<WebView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/themeWhite"-->
        <!--android:id="@+id/webCommercial">-->
    <!--</WebView>-->


    <ImageView
        android:id="@+id/imgCommercial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="-100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgCommercial">

        <Button
            android:text="I want to know more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnGoCommercial"
            android:layout_alignBottom="@+id/imgCommercial"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/themeWhite"
            android:background="@drawable/border_btn"
            android:layout_margin="15dp"/>

    </LinearLayout>

    <Button
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/close"
        android:textColor="@color/brownLoading"
        android:id="@+id/btnClose"
        android:layout_width="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:layout_height="35dp" />


</RelativeLayout>