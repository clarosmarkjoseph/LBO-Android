<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_forgotPassword"
    android:background="@color/brownLoading"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/app_logo" />

        <TextView
            android:text="Forgot Password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="24sp"
            android:textColor="@color/themeWhite"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/txtEmailForgot"
            android:layout_alignStart="@+id/txtEmailForgot" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="15dp"
            android:background="@drawable/textbox"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtEmailForgot"
            android:hint="Email Address"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/txtBday"
            android:paddingLeft="15dp"
            android:hint="Birthdate"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtEmailForgot"
            android:background="@drawable/textbox"
            android:inputType="date"
            android:editable="false"

            />

        <TextView
            android:text="*Enter your e-mail address and birth date above to reset your password"
            android:layout_width="wrap_content"
            android:textColor="@color/themeWhite"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textStyle="italic"
            android:layout_below="@+id/txtBday"
            android:layout_alignLeft="@+id/txtBday"
            android:layout_alignStart="@+id/txtBday"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_alignEnd="@+id/txtBday" />

        <Button
            android:id="@+id/btnSendEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/textView"
            android:background="@color/menu_appointment"
            android:text="SEND VERIFICATION"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/themeWhite"
            android:textSize="20dp" />
    </RelativeLayout>

</LinearLayout>