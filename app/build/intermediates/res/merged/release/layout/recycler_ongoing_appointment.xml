<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_appointment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    app:cardElevation="5sp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="0.75"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/brownLoading"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lblDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/brownLoading"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/lblYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/brownLoading"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lblTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="@color/brownLoading"
                    android:textSize="14sp"
                    android:textStyle="normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblServiceType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="5sp"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/lblDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_marginRight="10sp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lblTechnician"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:gravity="left"
                    android:layout_marginTop="5sp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lblStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="Reserved"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/themeWhite"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>



        <View
            android:id="@+id/linear_border1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/linear_details"
            android:background="@color/themeLightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_border1"
            android:weightSum="1.0">

            <Button
                android:id="@+id/btnCancelAppointment"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"

                android:text="Cancel"
                android:textColor="@color/themeRed"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnViewTransaction"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"

                android:text="View Details"
                android:textColor="@color/laybareGreen"

                android:textSize="16sp"
                android:textStyle="italic" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
