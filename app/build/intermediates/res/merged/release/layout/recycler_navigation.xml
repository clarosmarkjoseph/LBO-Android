<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/lblCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Dashboard"
        android:textColor="@color/brownLoading"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:weightSum="1.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15">

            <ImageView
                android:id="@+id/imgList"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:scaleType="fitXY"
                android:src="@drawable/a_services"
                android:tint="@color/brownLoading" />

            <TextView
                android:id="@+id/lblTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="My Appointments"
                android:textColor="@color/brownLoading"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/lblNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.85"
            android:gravity="center"
            android:textColor="@color/themeWhite"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/themeLightGray" />

</LinearLayout>